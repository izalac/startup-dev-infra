server {
    listen 3443 ssl;
    server_name localhost;  # Replace with your domain or IP address

    ssl_certificate /usr/local/share/ca-certificates/localhost.crt;  # Path to your SSL certificate
    ssl_certificate_key /root/localhost.key;  # Path to your SSL certificate key

    location / {
        proxy_pass http://localhost:3000;  # Internal service running on port 3000
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
